<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/uiListItem"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="2dp"
        android:elevation="0dp"
        app:cardCornerRadius="6.0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageListImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/jhalak" />

            <ImageView
                android:id="@+id/video"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/video" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/instaDp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/dp"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/instahandle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="jhalakchaudhary1"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:id="@+id/instaCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="I wear shirts like this better than @_.yubraaj."
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />




            </LinearLayout>

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>